# EditorConfig is awesome: https://EditorConfig.org

# Root file of the project
root = true

# All files
[*]
indent_style = space
indent_size = 2
tab_width = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# JavaScript and JSX files
[*.js]
indent_size = 2
tab_width = 2

[*.jsx]
indent_size = 2
tab_width = 2

# TypeScript files
[*.ts]
indent_size = 2
tab_width = 2

[*.tsx]
indent_size = 2
tab_width = 2

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.yml]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
